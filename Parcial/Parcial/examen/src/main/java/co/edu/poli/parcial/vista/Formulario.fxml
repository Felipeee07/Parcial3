<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>


<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.poli.parcial.controlador.FormularioControlador"
            prefWidth="720" prefHeight="680">

    <children>

        <Label text="Producciones Audiovisuales (Película / Serie)"
               layoutX="200" layoutY="12"
               style="-fx-font-size:16px; -fx-font-weight:bold;"/>

        <!-- Formulario -->
        <Label text="Código:" layoutX="20" layoutY="60"/>
        <TextField fx:id="txtCodigo" layoutX="130" layoutY="55" prefWidth="200"/>

        <Label text="Título:" layoutX="20" layoutY="100"/>
        <TextField fx:id="txtTitulo" layoutX="130" layoutY="95" prefWidth="200"/>

        <Label text="Año:" layoutX="370" layoutY="60"/>
        <TextField fx:id="txtAnio" layoutX="430" layoutY="55" prefWidth="120"/>

        <Label text="Duración (min):" layoutX="370" layoutY="100"/>
        <TextField fx:id="txtDuracion" layoutX="470" layoutY="95" prefWidth="80"/>

        <Label text="Director (nombre):" layoutX="20" layoutY="140"/>
        <TextField fx:id="txtDirector" layoutX="130" layoutY="135" prefWidth="200"/>

        <Label text="Género (película):" layoutX="370" layoutY="140"/>
        <TextField fx:id="txtGenero" layoutX="480" layoutY="135" prefWidth="150"/>

        <Label text="Temporadas (serie):" layoutX="20" layoutY="180"/>
        <TextField fx:id="txtTemporadas" layoutX="130" layoutY="175" prefWidth="100"/>

        <Label text="Tipo:" layoutX="20" layoutY="220"/>
        <ComboBox fx:id="cmbTipo" layoutX="130" layoutY="215" prefWidth="140">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Película"/>
                    <String fx:value="Serie"/>
                </FXCollections>
            </items>
        </ComboBox>

        <!-- Botones -->
        <Button text="Crear" layoutX="20" layoutY="260" prefWidth="100" onAction="#accionCrear"/>
        <Button text="Buscar por Código" layoutX="140" layoutY="260" prefWidth="140" onAction="#accionBuscar"/>
        <Button text="Listar Todo" layoutX="300" layoutY="260" prefWidth="120" onAction="#accionListar"/>
        <Button text="Modificar" layoutX="440" layoutY="260" prefWidth="100" onAction="#accionModificar"/>
        <Button text="Eliminar" layoutX="560" layoutY="260" prefWidth="100" onAction="#accionEliminar"/>

        <Button text="Serializar (guardar)" layoutX="20" layoutY="305" prefWidth="160" onAction="#accionSerializar"/>
        <Button text="Deserializar (cargar)" layoutX="200" layoutY="305" prefWidth="160" onAction="#accionDeserializar"/>

        <!-- Tabla -->
        <TableView fx:id="tabla" layoutX="20" layoutY="360" prefWidth="680" prefHeight="300">
            <columns>
                <TableColumn fx:id="colCodigo" text="Código" prefWidth="90"/>
                <TableColumn fx:id="colTitulo" text="Título" prefWidth="200"/>
                <TableColumn fx:id="colAnio" text="Año" prefWidth="70"/>
                <TableColumn fx:id="colDirector" text="Director" prefWidth="150"/>
                <TableColumn fx:id="colTipo" text="Tipo" prefWidth="80"/>
                <TableColumn fx:id="colExtra" text="Info extra" prefWidth="90"/>
            </columns>
        </TableView>

    </children>

    <padding>
        <Insets top="10" left="10" right="10" bottom="10"/>
    </padding>
</AnchorPane>
